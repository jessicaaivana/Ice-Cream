    <title>冰淇淋选择</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Comic+Neue:wght@700&family=Patrick+Hand&display=swap');

        body {
            text-align: center;
            margin: 0;
            padding: 0;
            background-color: #ffdde1; /* Light pink background */
            font-family: 'Patrick Hand', cursive;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            transition: all 0.5s ease-in-out;
        }

        h2 {
            font-size: 28px;
            color: #ff4d94;
            text-shadow: 2px 2px 4px #ff99cc;
            transition: all 0.5s ease-in-out;
        }

        img {
            width: 200px;
            margin-bottom: 15px;
            border-radius: 10px;
        }

        button {
            font-size: 20px;
            padding: 12px 25px;
            margin: 10px;
            border-radius: 20px;
            border: none;
            transition: all 0.3s ease;
            font-family: 'Comic Neue', cursive;
            cursor: pointer;
            box-shadow: 2px 2px 5px rgba(255, 105, 180, 0.4);
        }

        #yesBtn {
            background-color: #ff99cc;
            color: white;
            font-size: 20px;
        }

        #noBtn {
            background-color: #ff6680;
            color: white;
            font-size: 20px;
        }

        #yesBtn:hover {
            background-color: #ff80b3;
        }

        #noBtn:hover {
            background-color: #ff4d6a;
        }

        .final-container {
            display: none;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            height: 100vh;
        }

        .final-message {
            font-size: 30px;
            color: #ff4d94;
            text-shadow: 2px 2px 4px #ff99cc;
            margin-top: 20px;
        }

        .final-image {
            width: 60%;
            max-width: 400px;
            margin-top: 20px;
            border-radius: 20px;
            box-shadow: 3px 3px 10px rgba(255, 105, 180, 0.5);
        }
