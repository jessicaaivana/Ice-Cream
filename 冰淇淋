<body>

    <!-- Cute Chinese meme GIF above the question -->
    <img id="meme" src="https://i.postimg.cc/2yttbJsk/73ee6427987847926ead20ec22136f6a.gif" alt="Cute Ice Cream Meme">

    <h2 id="question">我可以吃冰淇淋吗？🍦</h2>
    <button id="yesBtn">可以 💖</button>
    <button id="noBtn">不可以 😭</button>

    <!-- Final message and image -->
    <div class="final-container" id="finalScreen">
        <h2 class="final-message">谢谢你宝贝 太爱你了 💖</h2>
        <img class="final-image" src="https://i.postimg.cc/BbPgyvz3/images.jpg" alt="Happy Ice Cream">
    </div>

    <script>
        let clickCount = 0;
        const maxClicks = 20;
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const question = document.getElementById('question');
        const meme = document.getElementById('meme');
        const finalScreen = document.getElementById('finalScreen');

        noBtn.addEventListener('click', () => {
            if (clickCount < maxClicks) {
                clickCount++;

                // Shrink No button
                let currentNoSize = parseFloat(window.getComputedStyle(noBtn).fontSize);
                if (currentNoSize > 5) {
                    noBtn.style.fontSize = (currentNoSize - 2) + "px";
                }

                // Grow Yes button
                let currentYesSize = parseFloat(window.getComputedStyle(yesBtn).fontSize);
                yesBtn.style.fontSize = (currentYesSize + 10) + "px";

                // If max clicks reached, make Yes button take over the screen
                if (clickCount === maxClicks) {
                    yesBtn.style.fontSize = "100px";
                    noBtn.style.display = "none";
                    question.innerText = "你别想拒绝了！🍦💖";
                }
            }
        });

        yesBtn.addEventListener('click', () => {
            // Hide everything and show final screen
            meme.style.display = "none";
            question.style.display = "none";
            yesBtn.style.display = "none";
            noBtn.style.display = "none";

            // Show final screen
            finalScreen.style.display = "flex";
        });
    </script>

</body>
</html>
